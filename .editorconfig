# EditorConfig pour le template LaTeX UTC
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.tex]
indent_style = space
indent_size = 4

[*.sty]
indent_style = space
indent_size = 2

[*.bib]
indent_style = space
indent_size = 4

[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
